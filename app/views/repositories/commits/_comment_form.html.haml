#comment-form.comment-form
  .comment-form-avatar.pull-left
    = image_tag current_user.avatar.thumb, class: 'img-rounded'
  .comment-form-content.pull-left
    = form_for comment, as: :comment, url: url_for(space_id: @repository.space, repository_id: @repository, commit_id: @commit, controller: '/repositories/commits/comments', action: 'create', short: true), remote: true do |f|
      %ul.nav.nav-tabs
        %li.active= link_to 'Write', "#inline-comment-form", data: {toggle: 'tab'}, role: 'tab'
      .tab-content
        .tab-pane.fade.active.in(aria-labelledby="write-tab" role="tab")
          .form-group
            = f.text_area :content, class: 'form-control', placeholder: 'Leave a comment'
          .form-group
            .pull-right
              = f.submit 'Comment', class: 'btn btn-success'
            .clearfix
  .clearfix
