%tr(id="#{blob.type}-#{blob.id}" class="#{blob.type}")
  %td.icon
    %i.fa.fa-1.fa-file-text-o
  %td.name
    - path = params[:path].present? ? File.join(params[:path], blob.name) : blob.name
    = link_to blob.name, repository_reference_blob_path(@repository, reference_type: @reference.type.tableize, reference_id: @reference.name, path: path)
  %td.message
    = link_to repository_reference_commit_path(@repository, reference_type: @reference.type.tableize, reference_id: @reference.name, id: blob.sha), title: blob.message do
      = truncate blob.message, length: 48
  %td.modified
    = blob.modified