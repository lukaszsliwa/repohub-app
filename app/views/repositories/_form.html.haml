- if (full_messages = f.object.errors.full_messages).present?
  %ul.errors
    - full_messages.each do |error|
      %li= error
.form-group
  = f.label :name, 'Repository Name'
  = f.text_field :name, class: 'form-control'
.form-group
  = f.label :space_id, 'Space'
  = f.select :space_id, Space.all.map {|space| [space.name, space.id]}, class: 'form-control', include_blank: true
- if f.object.new_record?
  .form-group
    = f.label :handle, 'Handle'
    = f.text_field :handle, class: 'form-control'
.form-group
  = f.label :description, 'Repository Description'
  = f.text_area :description, class: 'form-control'
.form-group
  = f.submit 'Submit', class: 'btn btn-success'
  &nbsp;
  = link_to 'Back', :back