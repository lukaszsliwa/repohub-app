%h2
  = link_to 'Users', users_path
  \/
  = @user.full_name
  \/
  = link_to 'Keys', user_keys_path(@user)
  \/
  = @key.name
  \/
  Edit this key

= form_for @key, url: user_key_path(@user, @key) do |f|
